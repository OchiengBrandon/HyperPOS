DEBUG=False

# Allowed Hosts
ALLOWED_HOSTS=pos.navipos.co.ke,www.pos.navipos.co.ke,navipos.co.ke

# Database Configuration for MySQL (cPanel)
DATABASE_NAME=naviposc_hyperpos
DATABASE_USER=naviposc_posuser
